  <h1 style="font-size: 3rem; color: black">Register here</h1>
  <a for="inputEmail" class="sr-only">Full name</a>
  <input type="text" name="fullname" class="form-control" placeholder="Full name" required autofocus>
  <br>
  <a for="inputEmail" class="sr-only">Email</a>
  <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required autofocus>
  <br>
  <a for="inputPassword" class="sr-only">Password</a>
  <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
